<persistence-unit name="donnedesangPU" transaction-type="RESOURCE_LOCAL">
    <class>com.donnedesang.model.Donor</class>
    <class>com.donnedesang.model.Receiver</class>
    <properties>
        <!-- Connexion PostgreSQL -->
        <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/donnedesang"/>
        <property name="javax.persistence.jdbc.user" value="postgres"/>
        <property name="javax.persistence.jdbc.password" value="password"/>

        <!-- Dialect PostgreSQL -->
        <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>

        <!-- Création automatique des tables -->
        <property name="hibernate.hbm2ddl.auto" value="update"/>

        <!-- Afficher les requêtes SQL dans la console -->
        <property name="hibernate.show_sql" value="true"/>
        <property name="hibernate.format_sql" value="true"/>
    </properties>
</persistence-unit>
