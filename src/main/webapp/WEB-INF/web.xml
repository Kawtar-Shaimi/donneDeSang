<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Configuration globale du projet -->
    <display-name>Don de Sang</display-name>

    <!-- ==================== DonorServlet ==================== -->
    <servlet>
        <servlet-name>DonorServlet</servlet-name>
        <servlet-class>com.donnedesang.controller.DonorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DonorServlet</servlet-name>
        <url-pattern>/donors</url-pattern>
    </servlet-mapping>

    <!-- ==================== ReceiverServlet ==================== -->
    <servlet>
        <servlet-name>ReceiverServlet</servlet-name>
        <servlet-class>com.donnedesang.controller.ReceiverServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReceiverServlet</servlet-name>
        <url-pattern>/receivers</url-pattern>
    </servlet-mapping>

    <!-- ==================== MatchServlet ==================== -->
    <servlet>
        <servlet-name>MatchServlet</servlet-name>
        <servlet-class>com.donnedesang.controller.MatchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MatchServlet</servlet-name>
        <url-pattern>/match</url-pattern>
    </servlet-mapping>

    <!-- ==================== Page d'accueil ==================== -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>