<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Servlet pour les Donneurs -->
    <servlet>
        <servlet-name>DonorServlet</servlet-name>
        <servlet-class>com.donnedesang.controller.DonorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DonorServlet</servlet-name>
        <url-pattern>/donors</url-pattern>
    </servlet-mapping>

    <!-- Servlet pour les Receveurs -->
    <servlet>
        <servlet-name>ReceiverServlet</servlet-name>
        <servlet-class>com.donnedesang.controller.ReceiverServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReceiverServlet</servlet-name>
        <url-pattern>/receivers</url-pattern>
    </servlet-mapping>

    <!-- Servlet pour le Matching -->
    <servlet>
        <servlet-name>MatchServlet</servlet-name>
        <servlet-class>com.donnedesang.controller.MatchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MatchServlet</servlet-name>
        <url-pattern>/match</url-pattern>
    </servlet-mapping>
</web-app>
